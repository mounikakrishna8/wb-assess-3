
  {% extends 'base.html.njk' %}
  {% block body %}


    <form action="/like-fossil">
      <div>
        <label for="namefield">liked Fossil</label>
        <select name="name"> 
         {% for fossil in fossils%}
            <option value= {{fossil.name}} > {{ fossil.name }} </option>
         {% endfor %}
        </select>
      </div>
      <div>
        <input type="submit" />
      </div>
    </form>


    <div class="fossil-div">
    <h1> Welcome {{name}} </h1>
    {% for fossil in fossils %}
      <div>
      <h3>{{name}}, this is a {{ fossil.name }}.</h3>
      <h2>Liked {{ fossil.num_likes }} times.</h2>
      <img src="{{ fossil.img }}" />
      </div>
    {% endfor %}
    </div>


    

   
  {% endblock %} 

